<Page
    x:Class="NewsApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NewsApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <ScrollViewer HorizontalScrollMode ="Enabled">
            <StackPanel>
                <Button x:Name="GetNews_Button" Content="Load News" VerticalAlignment="Center" Click="button_Click"/>
                <Button x:Name="GetTechNews_Button" Content="Load Technology News" VerticalAlignment="Center" Click="GetTechNews_Button_Click"/>
                <Button x:Name="GetSportNews_Button" Content="Load Sports News" VerticalAlignment="Center" Click="GetSportNews_Button_Click"/>
                <Button x:Name="GetScienceNews_Button" Content="Load Science News" VerticalAlignment="Center" Click="GetScienceNews_Button_Click"/>
                <Button x:Name="GetHealthNews_Button" Content="Load Health News" VerticalAlignment="Center" Click="GetHealthNews_Button_Click"/>
                <Button x:Name="GetEntertainmentNews_Button" Content="Load Entertainment News" VerticalAlignment="Center" Click="GetEntertainmentNews_Button_Click"/>
                <Button x:Name="GetBusinessNews_Button" Content="Load Business News" VerticalAlignment="Center" Click="GetBusinessNews_Button_Click"/>
                <!--<TextBlock x:Name="NameTextBlock" HorizontalAlignment="Right"/>-->
                <TextBlock x:Name="NewsTextBlock" HorizontalAlignment="Left"/>
                <TextBlock x:Name="TechNewsTextBlock" HorizontalAlignment="Left"/>
                <TextBlock x:Name="SportNewsTextBlock" HorizontalAlignment="Left"/>
                <TextBlock x:Name="ScienceNewsTextBlock" HorizontalAlignment="Left"/>
                <TextBlock x:Name="HealthNewsTextBlock" HorizontalAlignment="Left"/>
                <TextBlock x:Name="EntertainmentNewsTextBlock" HorizontalAlignment="Left"/>
                <TextBlock x:Name="BusinessNewsTextBlock" HorizontalAlignment="Left"/>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
