                    <ScrollViewer x:ConnectionId='3' x:Name="ImageView" Grid.Row="1" HorizontalScrollMode="Disabled" VerticalScrollMode="Auto">
                       
                    </ScrollViewer>

                </Grid>

            </PivotItem>



