            </PivotItem>


            <PivotItem Header="Health" Background="PaleVioletRed">
                <Grid VerticalAlignment="Top" HorizontalAlignment="Left">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
