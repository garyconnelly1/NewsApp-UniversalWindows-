                    <Button x:ConnectionId='8' x:Name="GetHealthNews_Button" Grid.Row="0" Content="Load Health News" VerticalAlignment="Center"                                   />
                    <ScrollViewer Grid.Row="1" Grid.Column="0" HorizontalScrollMode="Disabled" VerticalScrollMode="Auto" Background="LightBlue">
                        <TextBlock x:ConnectionId='9' x:Name="HealthNewsTextBlock" TextWrapping="Wrap"  HorizontalAlignment="Left"/>
                    </ScrollViewer>
                </Grid>
            </PivotItem>

            <PivotItem Header="Entertainment" Background="DarkGoldenrod">
