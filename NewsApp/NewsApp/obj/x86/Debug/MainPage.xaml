                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="500" />
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button x:ConnectionId='25' x:Name="GetNews_Button" Grid.Row="0" Content="Load News" VerticalAlignment="Center"                             />

                    <ScrollViewer Grid.Row="1" Grid.Column="0" VerticalScrollMode="Auto" Background="LightGray">

                      <!--  <TextBlock x:Name="URLNewsTextBlock" TextWrapping="Wrap"  HorizontalAlignment="Left"/> -->
                        <StackPanel>
                            

                            
                           
                            <Image x:ConnectionId='26' x:Name="ResultImage1" Height="200"/>
                            <TextBlock x:ConnectionId='27' x:Name="NewsTextBlock1" TextWrapping="Wrap"  HorizontalAlignment="Left"></TextBlock>

                            <Image x:ConnectionId='28' x:Name="ResultImage2" Height="200"/>
